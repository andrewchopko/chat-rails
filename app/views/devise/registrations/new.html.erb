<%= provide(:title, "Sign Up") %>
<h1>Sign Up</h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="input-field col s7">
      <%= f.input :name, label: "Name", class: "validate" %>
    </div>
    <div class="input-field col s7">
      <%= f.input :email, label: "E-mail", class: "validate" %>
    </div>
    <div class="input-field col s7">
      <%= f.input :password %>
    </div>
    <div class="input-field col s7">
      <%= f.input :password_confirmation %>
    </div>
  </div>
    <%= f.button :submit, "Sign up", class: "btn waves-effect waves-green purple darken-4"%>
<% end %>

<%= render "devise/shared/links" %>
